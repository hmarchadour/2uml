<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension
         point="org.eclipse.ui.commands">
    <category
            name="2UML"
            id="org.obeonetwork.2uml">
      </category>
      <command
            categoryId="org.obeonetwork.2uml"
            id="org.obeonetwork.2uml.onJar"
            name="Convert a Jar File">
      </command>
      <command
            categoryId="org.obeonetwork.2uml"
            id="org.obeonetwork.2uml.onJDTJarArtifact"
            name="Convert a Jar File">
      </command>
    </extension> 
    <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.obeonetwork.2uml.onJar"
            class="org.obeonetwork.jar2uml.ui.handlers.JarFileHandler">
      </handler>
      <handler
            commandId="org.obeonetwork.2uml.onJDTJarArtifact"
            class="org.obeonetwork.jar2uml.ui.handlers.JDTJarArtifactHandler">
      </handler>
   </extension> 
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.obeonetwork.2uml.onJar"
               label="Convert From Jar To UML"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="org.eclipse.core.resources.IFile">
                     </instanceof>
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <test
                              property="org.eclipse.core.resources.extension"
                              value="jar">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.obeonetwork.2uml.onJDTJarArtifact"
               label="Convert From Jar To UML"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="org.eclipse.jdt.core.IPackageFragmentRoot">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
</plugin>
